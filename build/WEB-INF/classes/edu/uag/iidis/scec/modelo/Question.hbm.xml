<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">  

<hibernate-mapping>
    <class name="edu.uag.iidis.scec.modelo.Question"
           table="question"
           dynamic-update="false"
           dynamic-insert="false">

        <id name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null" >
            <generator class="increment">
            </generator>
        </id>
        
        <property name="text"
            type="java.lang.String"
            not-null="true"
            unique="true" />
            
        <property name="idSection"
            type="java.lang.Long"
            not-null="true" />
           
    </class>

</hibernate-mapping>
